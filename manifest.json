{
	"name": "ERead",
	
	"description" : "この拡張機能はぎゅっとeの英文を抜き出す拡張機能です。",
	
	"version": "1.0",
	"manifest_version": 2,

	"browser_action": {
		"default_title": "ERead",
		"default_popup": "popup.html"
	},

	"icons" : {
		"16" : "./contents_image/icon-16.png",
		"48" : "./contents_image/icon-48.png",
		"128" : "./contents_image/icon-128.png"
	},

	"permissions": [
		"tabs"
    ],

    "content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": [ "js/content.js" ]
		}
	]
}