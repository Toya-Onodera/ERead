{
	"name": "ERead",
	
	"description" : "This extension is reading for Gyuto-e (この拡張機能はぎゅっとeの英文を抜き出す拡張機能です。)",
	
	"version": "1.0",
	"manifest_version": 2,

	"browser_action": {
		"default_title": "ERead",
		"default_popup": "popup.html",
		"default_icon": "./contents_image/icon.png"
	},

	"permissions": [
		"tabs"
    ],

    "content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": [ "js/content.js" ]
		}
	]
}